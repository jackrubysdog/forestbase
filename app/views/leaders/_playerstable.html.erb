<div class="grid_8 alpha"><h2>ALL TIME PLAYERS</h2>
<div class="grid_8 alpha">
<div class="grid_1 alpha"><h4>No</h4></div>
<div class="grid_5"><h4>Player</h4></div>
<div class="grid_2 omega"><h4>Total</h4></div>
<% @apps.each_with_index do |x,idx| %>
<% player = Player.find_by_id(x.id) %>
<% @playerrecord = PlayerRecord.new(x.player.id) %>
<div class="grid_1 alpha"><%= h5alternate(idx) %><%= idx+1 %></h5></div>
<div class="grid_5"><%= h5alternate_left(idx) %><%= link_to x.player.knownname, player_path(x.player.id) %> (<%= constructyears(x.player.id,@playerrecord.firstgame.year,@playerrecord.lastgame.year,x.player.active) %>)</h5></div>
<div class="grid_2 omega"><%= h5alternate(idx) %><%= x.apps %></h5></div>
<% end %>
<% for idx in @apps.size..24 %>
<div class="grid_1 alpha"><%= h5alternate(idx) %>&nbsp</h5></div>
<div class="grid_5"><%= h5alternate_left(idx) %>&nbsp;</h5></div>
<div class="grid_2 omega"><%= h5alternate(idx) %>&nbsp;</h5></div>
<% end %>
</div>
</div>
